<%- model_class = Answer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:annual_summary_report_id) %></dt>
      <dd><pre class="prettyprint"><%= @answer.annual_summary_report_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:question_id) %></dt>
      <dd><pre class="prettyprint"><%= @answer.question_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:answer) %></dt>
      <dd><pre class="prettyprint"><%= @answer.answer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:question) %></dt>
      <dd><pre class="prettyprint"><%= @answer.question %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:section_id) %></dt>
      <dd><pre class="prettyprint"><%= @answer.section_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              answers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_answer_path(@answer), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              answer_path(@answer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>