
    <div ng-app="cdpApp" ng-controller="EnterFeedbackCtrl as feedbackCtrl"
            ng-init="loadQuestions(<%= @feedback.id%>)">


      <div  ng-repeat="question in questions" style="background-color: #F8F8F8;margin-bottom: 5px; ">
        <div class="row">
          <div class="col-md-12">
        <div class="form-group" style="padding:5px;">
          <div class="control-label col-md-2"><b>Question</b></div>
          <div class="col-md-10">
            <input type="text"
                   ng-model="question.question"
                   name="sections[][question]" class="text_field form-control"/>

            <input type="hidden"

                   name="sections[][id]" value="{{question.id}}" />
          </div>
        </div>


        <div class="form-group" style="padding:5px;">
          <div class=" control-label col-md-2"><b>Feedback</b></div>
          <div class="col-md-10">
            <textarea class="answerTextArea text_area form-control"
                      ng-model="question.answer" name="sections[][answer]"></textarea>
          </div>
        </div>
            </div>
        </div>
      </div>


      <div class="row" style="margin-top: 10px; margin-bottom: 20px;">
        <div class="col-md-5">
          <div class="icon-div-wide">
            <div> <%= link_to '<i class="fa fa-plus-square"></i>'.html_safe, '',
                              :class => 'font-awesome-icon', :'ng-click' => 'addQuestion()' %>&nbsp;Add a Question</div>
          </div>
        </div>
      </div>
    </div>

