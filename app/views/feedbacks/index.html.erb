<h1>Listing feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>From user</th>
      <th>From user name</th>
      <th>From user email</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.user_id %></td>
        <td><%= feedback.from_user_id %></td>
        <td><%= feedback.from_user_name %></td>
        <td><%= feedback.from_user_email %></td>
        <td><%= feedback.status_id %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path %>
